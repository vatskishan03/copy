{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    // Place compiled files in ../dist so both server and shared are output together
    "outDir": "../dist",
    // Compile from the server directory and the shared directory one level up
    "rootDir": "..",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  // Include server src and shared directory outside the server folder
  "include": [
    "../shared/**/*",
    "src/**/*"
  ],
  // Exclude client code and unwanted files
  "exclude": [
    "../client",
    "node_modules",
    "**/*.spec.ts"
  ]
}