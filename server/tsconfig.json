{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "../dist",
    "rootDir": "..",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "../../../shared/*": ["../shared/*"]
    }
  },
  "include": ["../shared/**/*", "src/**/*"],
  "exclude": ["../client", "node_modules", "**/*.spec.ts"]
}